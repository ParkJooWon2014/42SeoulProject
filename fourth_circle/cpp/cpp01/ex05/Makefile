NAME= harl
CXX= c++
SRC = Harl.o main.o
OFLAGS =
CPPFLAGS += $(OFLAGS) -c
CPPFLAGS += -Wall -Wextra -Werror -std=c++98
CPPFLAGS +=  -I ./include

TARGETS = $(NAME)

all : $(TARGETS)

$(TARGETS): $(SRC)
	$(CXX) -o $@ $^ -g

%.o : %.cpp
	$(CXX) $(CPPFLAGS) $^ -o $@ -g

.PHONY : clean
clean:
	rm -f ${SRC}

.PHONY : fclean

fclean : clean
	rm -f ${NAME}

.PHONY : re
re : 
	make fclean
	make all
